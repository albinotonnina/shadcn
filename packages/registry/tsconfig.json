{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": ["api/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "registry/**/*", "public/**/*"]
}
