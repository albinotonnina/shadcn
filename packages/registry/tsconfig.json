{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": false,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist", "registry", "public", "src"]
}
